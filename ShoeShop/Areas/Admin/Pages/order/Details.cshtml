@page
@model ShoeShop.Areas.Admin.Pages.order.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Pages/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Order Details</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Order ID:</strong> @Model.OrderDetails[0].OrderId</p>
                        <p><strong>Order Date:</strong> @Model.OrderDetails[0].OrderDate</p>
                        <p><strong>Customer Name:</strong> @Model.OrderDetails[0].NameC</p>
                        <p><strong>Email:</strong> @Model.OrderDetails[0].Email</p>
                        <p><strong>Address:</strong> @Model.OrderDetails[0].Address</p>

                        <h4>Products:</h4>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Image</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>@product.ProductName</td>
                                        <td>@product.Quantity</td>
                                        <td>@string.Format("{0:#,##0} VND", product.UnitPrice)</td>
                                        <td>
                                            <img src="@product.ProductImage" alt="Product Image" style="width: 100px;" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <p>
                            <strong>Status:</strong>
                            @if (Model.OrderDetails[0].Status == "1")
                            {
                                <span class="badge badge-success">Accepted</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pending</span>
                            }
                        </p>
                        <div>
                            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

