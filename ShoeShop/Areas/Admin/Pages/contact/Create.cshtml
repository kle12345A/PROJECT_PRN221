@page
@model ShoeShop.Areas.Admin.Pages.contact.CreateModel

@{
    ViewData["Title"] = "Create New Contact";
    Layout = "~/Areas/Admin/Pages/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
               
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
                    <li class="breadcrumb-item active">Create Contact</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h3>Create New Contact</h3>
                <hr />
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Contact.Name" class="control-label"></label>
                        <input asp-for="Contact.Name" class="form-control" placeholder="Enter Name" />
                        <span asp-validation-for="Contact.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Contact.Phone" class="control-label"></label>
                        <input asp-for="Contact.Phone" class="form-control" placeholder="Enter Phone Number" />
                        <span asp-validation-for="Contact.Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Contact.Address" class="control-label"></label>
                        <input asp-for="Contact.Address" class="form-control" placeholder="Enter Address" />
                        <span asp-validation-for="Contact.Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Contact.Content" class="control-label"></label>
                        <textarea asp-for="Contact.Content" class="form-control" placeholder="Enter Content" rows="3"></textarea>
                        <span asp-validation-for="Contact.Content" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Contact.UpdateDate" class="control-label"></label>
                        <input asp-for="Contact.UpdateDate" class="form-control" type="date" />
                        <span asp-validation-for="Contact.UpdateDate" class="text-danger"></span>
                    </div>

                    

                   

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Back to List -->
<div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
