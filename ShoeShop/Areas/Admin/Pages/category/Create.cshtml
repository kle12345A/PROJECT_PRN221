@page
@model ShoeShop.Areas.Admin.Pages.category.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Pages/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
             
            </div>
            <div class="col-sm-6">
                @* <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="Index">Categories</a></li>
                    <li class="breadcrumb-item active">Create Category</li>
                </ol> *@
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Create Category</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <form method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group">
                                        <label asp-for="Category.Title" class="control-label"></label>
                                        <input asp-for="Category.Title" class="form-control" />
                                        <span asp-validation-for="Category.Title" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ImageFile" class="control-label">Upload Icon</label>
                                        <input asp-for="ImageFile" type="file" class="form-control" onchange="previewImage(event)" />
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        <img id="imagePreview" src="#" alt="Image Preview" class="mt-2" style="display:none; max-width: 100%; height: auto;" />
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Category.Description" class="control-label"></label>
                                        <input asp-for="Category.Description" class="form-control" />
                                        <span asp-validation-for="Category.Description" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Category.Orders" class="control-label"></label>
                                        <input asp-for="Category.Orders" class="form-control" />
                                        <span asp-validation-for="Category.Orders" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Category.Note" class="control-label"></label>
                                        <input asp-for="Category.Note" class="form-control" />
                                        <span asp-validation-for="Category.Note" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Category.UpdateDate" class="control-label"></label>
                                        <input asp-for="Category.UpdateDate" class="form-control" />
                                        <span asp-validation-for="Category.UpdateDate" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Category.AdminCreate" class="control-label"></label>
                                        <input asp-for="Category.AdminCreate" class="form-control" />
                                        <span asp-validation-for="Category.AdminCreate" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Category.AdminUpdate" class="control-label"></label>
                                        <input asp-for="Category.AdminUpdate" class="form-control" />
                                        <span asp-validation-for="Category.AdminUpdate" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-page="Index">Back to List</a>
                        </div>

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts {
    <script>
        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('imagePreview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}