@page
@model ShoeShop.Areas.Admin.Pages.news.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Pages/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
        
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <!-- Optional Breadcrumbs -->
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <p>
                            <a asp-area="Admin" asp-page="/news/Create" class="btn btn-primary">Create New</a>
                        </p>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>Status</th>
                                    <th style="width:40%;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.News != null && Model.News.Count > 0)
                                {
                                    int index = 1;
                                    foreach (var news in Model.News)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>@news.Title</td>
                                            <td>@news.Description</td>
                                            <td>
                                                <img class="icon-image" src="@news.Image" alt="@news.Title" />
                                            </td>
                                            <td>@(news.Status ? "Active" : "Inactive")</td>
                                            <td>
                                                <a asp-area="Admin" asp-page="/news/Edit" asp-route-id="@news.Id" class="btn btn-warning">Edit</a>
                                                <a asp-area="Admin" asp-page="/news/Delete" asp-route-id="@news.Id" class="btn btn-danger">Delete</a>
                                                <a asp-area="Admin" asp-page="/news/Details" asp-route-id="@news.Id" class="btn btn-primary">Details</a>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">No news items available.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

<style>
    .icon-image {
        width: 100%;
        height: auto; /* Maintain aspect ratio */
    }
</style>