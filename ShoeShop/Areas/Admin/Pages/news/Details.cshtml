@page
@model ShoeShop.Areas.Admin.Pages.news.DetailsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Pages/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="Index">News List</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>News Information</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <h4>News</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.News.Title)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.News.Title)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.News.Description)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.News.Description)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.News.Image)
                            </dt>
                            <dd class="col-sm-10">
                                <img src="@Model.News.Image" alt="@Model.News.Title" class="img-fluid" />
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.News.Status)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.News.Status)
                            </dd>
                        </dl>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <a asp-page="./Edit" asp-route-id="@Model.News?.Id" class="btn btn-warning">Edit</a>
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->