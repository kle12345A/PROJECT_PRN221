@page
@model ShoeShop.Pages.contact.ContactModel
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<!-- Contact Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h2 class="display-4 mb-4 fw-bold">Get in Touch</h2>
                <p class="text-muted mb-5 fs-5">
                    We’d love to hear from you! Whether you have questions or feedback, just fill out the form below.
                </p>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                else if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </div>
        </div>

        <div class="row justify-content-center align-items-center">
            <!-- Form Section -->
            <div class="col-md-6">
                <div class="card shadow border-0 p-4">
                    <form method="post" novalidate>
                        <div class="row g-4">

                            <!-- Name -->
                            <div class="col-12">
                                <label for="name" class="form-label">Name <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-12">
                                <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="col-12">
                                <label for="phone" class="form-label">Phone Number <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                                    <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter your phone number" required>
                                </div>
                            </div>

                            <!-- Address -->
                            <div class="col-12">
                                <label for="address" class="form-label">Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-house-fill"></i></span>
                                    <input type="text" class="form-control" id="address" name="address" placeholder="Enter your address">
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="col-12">
                                <label for="content" class="form-label">Message <span class="text-danger">*</span></label>
                                <textarea class="form-control" id="content" name="content" rows="4" placeholder="Write your message" required></textarea>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12">
                                <button class="btn btn-primary btn-lg w-100" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Image Section -->
            <div class="col-md-6 text-center mt-4 mt-md-0">
                <img src="https://rubee.com.vn/admin/webroot/upload/image/images/nike-logo.jpg"
                     alt="Nike Logo" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>
